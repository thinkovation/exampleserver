# Server Configuration
PORT=8080
JWT_SECRET=your-jwt-secret-here
SWAGGER_HOST=localhost:8080

# Statistics Configuration
STATS_INTERVAL=300  # in seconds (default: 5 minutes)

# Logging Configuration
LOG_FILE=app.log
LOG_MAX_SIZE=100    # maximum size in megabytes before rotation
LOG_MAX_AGE=28      # maximum number of days to retain old log files
LOG_MAX_BACKUPS=3   # maximum number of old log files to retain
LOG_COMPRESS=true   # whether to compress old log files

# External Logger Configuration (optional)
EXTERNAL_LOGGER_URL=  # URL of the external logging service (leave empty to disable)
EXTERNAL_LOGGER_KEY=  # Authentication key for the external logging service

# Datadog Configuration
DD_API_KEY=         # Your Datadog API key
DD_SERVICE=         # Service name (default: example-server)
DD_ENV=             # Environment name (default: development) 